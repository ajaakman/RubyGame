
<h1>User list</h1><br>

<div class="users"> 
    
    <div class="table_header">
    
        <div class="table_cell">User ID</div>
    
        <div class="table_cell">Username</div>
    
        <div class="table_cell">Date Joined</div>
        
        <div class="table_cell">Last Edit</div>
    
        <div class="table_cell">Admin</div>
        
        <div class="table_cell">Games Played</div>
        
        <div class="table_cell">Is Admin?</div>
    
        <div class="table_cell">Delete</div>
    
    </div>
    
    <% @list2.each do |liste| %>   
    
        <div class="user">
            
            <div class="table_cell"><%= liste.id %></div>
    
            <div class="table_cell"><%= liste.username %></div>
    
            <div class="table_cell"><%= liste.created_at %></div>
            
            <div class="table_cell"><%= liste.updated_at %></div>
    
            <div class="table_cell"><%= liste.isAdmin %></div>
            
            <div class="table_cell"><%= liste.gamesPlayed %></div>
    
            <% if liste.username != "Admin" %>
    
            <form action="/user/<%= liste.username %>" method="post" id="isAdmin">
    
                <input type="hidden" name="_method" value="put">
    
                <div class="table_cell"><input type="checkbox" name="isAdmin" <%= "checked" if liste.isAdmin %>>   
    
                <input type="submit" value="Update"></div>
    
            </form> 
    
                <div class="table_cell"><a href="/user/delete/<%= liste.username %>">Delete User?</a></div>
                
            <% end %> 
    
        </div>   
 
    <% end %>

</div>